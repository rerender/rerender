{
  "name": "rerender",
  "version": "0.0.6",
  "description": "Isomorphic virtual dom framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rerender/rerender.git"
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig-compile.json",
    "ts": "tsc --noEmit -p .",
    "prepublishOnly": "npm test && npm run compile",
    "test:unit": "jasmine-ts",
    "test:coverage": "node --max_old_space_size=3000 ./node_modules/.bin/nyc npm run test:unit",
    "lint": "tslint spec/*.ts spec/**/*.ts src/*.ts src/**/*.ts --config tslint.json",
    "test": "npm run lint && npm run test:coverage"
  },
  "author": "vasiliy.lector@gmail.com",
  "license": "MIT",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "lines": 100,
    "exclude": [
      "**/*.js",
      "**/*.d.ts",
      "spec/**/*.ts",
      "src/**/index.ts",
      "src/debug.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": false
  },
  "devDependencies": {
    "@types/jasmine": "^2.6.0",
    "jasmine-ts": "^0.2.1",
    "jsdom": "^11.6.2",
    "nyc": "^11.4.1",
    "tslint": "^5.7.0",
    "typescript": "^2.7.0"
  }
}
