{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "outDir": "./lib/",
        "jsx": "react",
        "jsxFactory": "h",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*",
        "./spec/**/*"
    ]
}
